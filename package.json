{
  "name": "@panda/command",
  "version": "0.1.2",
  "description": "Command creation library",
  "homepage": "https://github.com/AdamPuzio/panda-command",
  "bugs": "https://github.com/AdamPuzio/panda-command/issues",
  "author": "Adam Puzio <adam@puzio.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdamPuzio/panda-command.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build:cjs": "tsup src/index.ts --format cjs --dts",
    "build:esm": "tsup src/index.ts --format esm --dts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "watch": "npm run build -- --watch src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "args",
    "argv",
    "bin",
    "cli",
    "command",
    "command-line",
    "console",
    "parser",
    "script",
    "terminal"
  ],
  "devDependencies": {
    "@types/node": "^20.11.30",
    "chalk": "^5.3.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^7.0.1",
    "inquirer": "^9.2.17",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">= 18.x.x"
  },
  "panda": {
    "module": "command"
  }
}
